{
  "extends": "airbnb",
  "plugins": ["prettier"],
  "rules": {
    "max-len": [
      "error", 
      120
    ],
    "prettier/prettier": ["error", {
      "printWidth": 120,
      "singleQuote": true,
      "trailingComma": "all"
    }],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "object-curly-newline": ["error", { "multiline": true }]
  }
}
